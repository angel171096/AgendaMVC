@model IEnumerable<WebApplication1.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h2>Departamentos</h2>

<p>
    <a data-toggle="modal" data-target="#modaldept" class="btn btn-info">Crear Departamento</a>
</p>

<div class="form-group">
    <div class="col-md-6">
        <input id="filtrar" name="filtrar" placeholder="Buscar" onKeyUp="filtrarDatos(1,'Departamento');" class="form-control" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a href="#" onclick='filtrarDatos(1,"Departamento")'>Departamento</a>
            </th>
            <th>
                <a href="#" onclick='filtrarDatos(1,"Leyenda")'>Leyenda</a>
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody id="resultSearch"></tbody>
</table>

<div id="paginado">

</div>


<!-- Modal para regisrtar -->
<div class="modal fade" id="modaldept" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="mymodalLabel">Agregar Contacto</h4>
            </div><!--HEADER-->
            <div class="modal-body">
                <form asp-action="">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="Departamento" class="col-md-2 control-label">Departamento</label>
                            <div class="col-md-9">
                                <input for="Departamento" id="Departamento" placeholder="Departamento" name="Departamento" class="form-control" />
                            </div>
                        </div><!--Departamento-->
                        <div class="form-group">
                            <label for="Leyenda" class="col-md-2 control-label">Leyenda</label>
                            <div class="col-md-9">
                                <input for="Leyenda" id="Leyenda" placeholder="Leyenda" name="Leyenda"  class="form-control" />
                            </div>
                        </div><!--Leyenda-->
        
                        <label id="mensaje" class="col-md-2 control-label"></label>
                    </div>
                </form>
            </div><!--FIN modal body-->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="agregarDepartamento()">Guardar</button>
            </div><!--FOOTER-->
        </div>
    </div>
</div>

<!--Modal para editar departamento-->
<div class="modal fade" id="ModalEditar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="titleCategoria" class="modal-title"> </h4>
            </div>
            <div class="modal-body">
                <form asp-action="">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="DepartamentoEdit" class="col-md-2 control-label">Departamento</label>
                            <div class="col-md-9">
                                <input for="DepartamentoEdit" id="DepartamentoEdit" placeholder="DepartamentoEdit" name="DepartamentoEdit" class="form-control" />
                            </div>
                        </div><!--Departamento-->
                        <div class="form-group">
                            <label for="LeyendaEdit" class="col-md-2 control-label">Leyenda</label>
                            <div class="col-md-9">
                                <input for="LeyendaEdit" id="LeyendaEdit" placeholder="LeyendaEdit" name="LeyendaEdit" class="form-control" />
                            </div>
                        </div><!--Leyenda-->

                        <label id="mensajeEdit" class="col-md-2 control-label"></label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="editarDepartamento()" class="btn btn-primary">Editar</button>
            </div>
        </div>
    </div>
</div>